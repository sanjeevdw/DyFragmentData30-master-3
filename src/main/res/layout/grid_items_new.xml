<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_items_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/grid_item_background"
    android:paddingEnd="8dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/gridImageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="ContentDescription"
        tools:text="Grid List Image"
        />
    <LinearLayout
        android:id="@+id/master_category_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/gridTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textAlignment="center"
            tools:text="Grid List Id" />
        <TextView
            android:id="@+id/gridTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            tools:text="Grid List Text" />
        <TextView
            android:id="@+id/gridTextViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:textSize="12sp"
            tools:text="Grid List Text" />
    </LinearLayout>
</LinearLayout>
